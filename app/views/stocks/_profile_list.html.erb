<div class="row mt-4">
  <div class="col-12 col-md-9 table-box">
    <table class="table table-bordered table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">Symbol</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <% unless current_user.max_reached? %>
            <th scope="col">Actions</th>
          <% end %>
        </tr>
      </thead>
      <tbody id="stocks">
        <% @tracked_stocks.each do |stock| %>
          <tr>
            <th scope="row">
              <%= stock.ticker %>
              <% unless current_user.can_track_stock?(stock.ticker) %>
                <span class="badge badge-info ml-2">
                  tracked
                </span>
              <% end %>
            </th>
            <td><%= stock.name %></td>
            <td><%= stock.last_price %></td>
            <% unless current_user.max_reached? %>
              <td>
                <% if current_user.can_track_stock?(stock.ticker) %>
                  <%= link_to 'Track stock', user_stocks_path(user: current_user, stock_ticker: stock.ticker), method: :post, class: 'btn btn-sm btn-success' %>
                <% end %>
                <% if @user == current_user %>
                  <%= link_to 'Remove', user_stock_path(user: current_user, stock_tracked: stock), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

