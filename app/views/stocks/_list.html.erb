<div class="row mt-4">
  <div class="col-12 col-md-9 table-box">
    <table class="table table-bordered table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">Symbol</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tracked_stocks.each do |stock| %>
          <tr id="<%= stock.ticker %>">
            <th scope="row" id="<%= stock.ticker %>-ticker"><%= stock.ticker %></th>
            <td id="<%= stock.ticker %>-name"><%= stock.name %></td>
            <td class="text-success" id="<%= stock.ticker %>-price">
              $ <%= stock.last_price %>
            </td>
            <td>
              <%= link_to 'Remove', user_stock_path(user: current_user, stock_tracked: stock), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

