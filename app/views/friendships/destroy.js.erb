document.addEventListener('ajax:success', function() {
  let messages = document.getElementById('messages');
  let friendsList = document.getElementById('friends-list');
  let friendItem = document.getElementById('friend-<%= @friend.id %>')
  friendItem.innerHTML = '<%= j(render(partial: 'users/friend', locals: { friend: @friend })) %>';
  messages.innerHTML = '<%= j(render(partial: 'layouts/messages.html')) %>';
  <% if @tracked_friends&.any? %>
    friendsList.innerHTML = '<%= j(render(partial: 'friendships/list.html')) %>';
  <% else %>
    friendsList.innerHTML = '';
  <% end %>
});

