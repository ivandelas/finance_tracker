<h1 class="mb-4 mt-3 mt-md-4"><%= @user.full_name %>&apos;s profile</h1>
<div class="row">
  <div class="col-md-9">
    <dl>
      <dt>Email</dt>
      <dd><%= @user.email %></dd>
      <dt>First name</dt>
      <dd><%= @user.first_name %></dd>
      <dt>Last name</dt>
      <dd><%= @user.last_name %></dd>
    </dl>
  </div>
</div>
<h2>Portfolio</h2>
<% if @user.max_reached? %>
  <div class="row">
    <div class="col-md-9">
      <div class="alert alert-info d-inline-block">
        Maximum number of stocks reached by this user.
      </div>
    </div>
  </div>
<% end %>
<% if current_user.max_reached? %>
  <div class="row">
    <div class="col-md-9">
      <div class="alert alert-warning d-inline-block">
        You reached the maximum number of tracked stocks.
      </div>
    </div>
  </div>
<% end %>
<div id="stocks-list">
  <% if @tracked_stocks&.any? %>
    <%= render 'stocks/profile_list' %>
  <% else %>
    <div class="row">
      <div class="col-9">
        <div class="alert alert-warning d-inline-block">
          No stocks in this portfolio.
        </div>
      </div>
    </div>
  <% end %>
</div>

